{{template "admin_header" .}}
<div class="container">
    <!--
    EasyMDE をテキストエリアに使っている
    https://qiita.com/blue_islands/items/cafd076d6992c4a100e7
    -->
    <form>
        <div class="form-group">
            <select class="form-control" id="exampleFormControlSelect1">
                <option value="0">非公開</option>
                <option value="1">公開</option>
            </select>
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">タイトル</label>
            <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
        </div>
        <div class="form-group">
            <label for="exampleFormControlTextarea1">本文</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="name@example.com"></textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary mb-2" onclick="confirm('登録します？')">登録</button>
            <button type="submit" class="btn btn-primary mb-2" onclick="confirm('削除します？')">削除</button>
        </div>
    </form>

    <script>
        var easyMDE = new EasyMDE({element: document.getElementById('exampleFormControlTextarea1')});
    </script>
</div>
{{template "admin_footer"}}