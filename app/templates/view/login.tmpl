{{template "header" .}}

<h1>
    {{ .title }}
</h1>

<span>{{ .message }}</span>
<form method="post">
    <div class="row">
        <div class="col-sm-4 col-md-8">
            id: <input type="text" name="id">
        </div>
        <div class="col-sm-4 col-md-8">
            password: <input type="text" name="password">
        </div>
        <div class="col-sm-4 col-md-8">
            <input type="submit" value="submit">
        </div>
    </div>
</form>

{{template "footer"}}
